{
  "name": "@shopgate/dependency-linker",
  "version": "0.0.1",
  "description": "Shopgate's Dependency Linker",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shopgate/dependency-linker.git"
  },
  "bugs": {
    "url": "https://github.com/shopgate/dependency-linker/issues"
  },
  "homepage": "https://github.com/shopgate/dependency-linker",
  "license": "Apache-2.0",
  "keywords": [
    "shopgate",
    "dependency",
    "linker",
    "node",
    "npm"
  ],
  "contributors": [
    "Frithjof Kl√∂s <frithjof.kloes@shopgate.com> (https://github.com/kernelkiller)"
  ],
  "bin": {
    "link-dependencies": "./bin/link-dependencies"
  },
  "scripts": {
    "test": "mocha test/**/*",
    "test:watch": "mocha --watch test/**/*",
    "cover": "nyc mocha test/**/*"
  },
  "devDependencies": {
    "@shopgate/eslint-config": "^1.0.2",
    "mocha": "^4.0.1",
    "nyc": "^11.3.0",
    "rimraf": "^2.6.2",
    "sinon": "^4.1.2"
  },
  "engines": {
    "node": ">= 8.0.0",
    "npm": ">= 5.0.0"
  },
  "nyc": {
    "include": [
      "**/*.js"
    ],
    "exclude": [
      "build",
      "test",
      "dist"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "all": true,
    "report-dir": "build"
  }
}
